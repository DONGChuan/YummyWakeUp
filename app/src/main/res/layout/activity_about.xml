<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:navigationContentDescription="@string/abc_action_bar_up_description"
            android:background="@color/loopX_2"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/about"
            />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ScrollView
            android:scrollbarStyle="outsideOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <io.github.loopX.XAlarm.view.YummyTextView
                    android:text="@string/about_x_alarm_title"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/loopX_2_90_alpha"/>

                <io.github.loopX.XAlarm.view.YummyTextView
                    android:text="@string/about_x_alarm_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/loopX_2_50_alpha"/>

                <io.github.loopX.XAlarm.view.YummyTextView
                    android:text="@string/about_you_title"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/loopX_2_90_alpha"/>

                <io.github.loopX.XAlarm.view.YummyTextView
                    android:text="@string/about_you_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/loopX_2_50_alpha"/>

                <io.github.loopX.XAlarm.view.YummyTextView
                    android:text="@string/about_app_title"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/loopX_2_90_alpha"/>

                <io.github.loopX.XAlarm.view.YummyTextView
                    android:text="@string/about_app_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/loopX_2_50_alpha"/>

            </LinearLayout>

        </ScrollView>

        <io.github.loopX.XAlarm.view.YummyTextView
            android:text="@string/about_contact_title"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_email"
            android:textSize="20sp"
            android:textColor="@color/loopX_2_90_alpha"/>

        <io.github.loopX.XAlarm.view.YummyTextView
            android:id="@+id/tv_email"
            android:text="@string/about_contact_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:textColor="@color/loopX_2_50_alpha"/>

    </RelativeLayout>


</LinearLayout>
