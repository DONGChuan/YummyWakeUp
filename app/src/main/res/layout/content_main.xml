<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/loopX_1"
    android:orientation="vertical"
    android:tag="mainView">


    <RelativeLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/openLeftDrawer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:onClick="openLeftDrawer"
            android:scaleType="centerCrop"
            android:src="@drawable/main_left" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/main_mid" />

        <ImageView
            android:id="@+id/openRightDrawer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:onClick="openRightDrawer"
            android:scaleType="centerCrop"
            android:src="@drawable/main_right" />

    </RelativeLayout>

    <View
        android:id="@+id/centerView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />
    
    <io.github.loop_x.yummywakeup.view.ClockView
        android:id="@+id/analog_clock"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:layout_alignTop="@id/centerView"/>

    <io.github.loop_x.yummywakeup.view.YummyTextView
        android:id="@+id/tv_wake_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/analog_clock"
        android:text="@string/wake_up_in"
        android:textAlignment="center"
        android:textColor="@color/loopX_2_50_alpha"
        android:textSize="18sp"
        android:textStyle="bold" />

    <io.github.loop_x.yummywakeup.view.YummyTextView
        android:id="@+id/tv_alarm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wake_up"
        android:clickable="true"
        android:textAlignment="center"
        android:textColor="@color/loopX_2"
        tools:text="10:20"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/im_set_alarm"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/tv_alarm_time"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_set_alarm"/>

</RelativeLayout>
