<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingTop="102dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/model_normal" />

        <io.github.loop_x.yummywakeup.infrastructure.YummyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:gravity="center_horizontal"
            android:text="NORMAL"
            android:textColor="@color/loopX_3"
            android:textSize="20sp" />
    </LinearLayout>


    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_marginTop="48dp"
        android:background="#4DFFFFFF" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/model_math" />

        <io.github.loop_x.yummywakeup.infrastructure.YummyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:gravity="center_horizontal"
            android:text="MATH"
            android:textColor="@color/loopX_3"
            android:textSize="20sp" />
    </LinearLayout>


    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_marginTop="48dp"
        android:background="#4DFFFFFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/model_paint" />

        <io.github.loop_x.yummywakeup.infrastructure.YummyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:gravity="center_horizontal"
            android:text="PAINT"
            android:textColor="@color/loopX_3"
            android:textSize="20sp" />
    </LinearLayout>


    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_marginTop="48dp"
        android:background="#4DFFFFFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/model_shake" />

        <io.github.loop_x.yummywakeup.infrastructure.YummyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:gravity="center_horizontal"
            android:text="SHAKE"
            android:textColor="@color/loopX_3"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>